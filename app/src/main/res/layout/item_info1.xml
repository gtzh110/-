<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/item_background"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/layout"
                android:orientation="vertical"
                android:layout_weight="1.0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <!-- 设置颜色和字体大小以及边距-->
            <TextView
                    android:id="@+id/info_key"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#8899a6"/>
            <LinearLayout
                    android:id="@+id/value_layout"
                    android:paddingLeft="15dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/info_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:textSize="12dp"
                        android:textColor="#8899a6"
                        android:textColorHint="#FFC8C7CD"
                        android:layout_marginBottom="10dp"
                        android:hint="未填写"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:id="@+id/info_arrow"
                android:visibility="gone"
                android:src="@drawable/login_arrow"
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:contentDescription=""
                android:layout_marginRight="15dp"/>
        <ImageView
                android:id="@+id/pencil"
                android:visibility="gone"
                android:src="@drawable/task_edit"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:padding="15dp"
                android:contentDescription=""/>
        <LinearLayout
                android:id="@+id/show_account_tree"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:background="@drawable/relation_tree_back"
                android:gravity="center_vertical">
            <ImageView
                    android:layout_width="1px"
                    android:layout_height="fill_parent"
                    android:background="#FFD1D1D1"
                    />
            <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/show_tree"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:id="@+id/bottom_line"
            android:layout_marginLeft="15dp"
            android:background="#FFD1D1D1"
            android:layout_width="fill_parent"
            android:layout_height="1px"/>
</LinearLayout>