<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<LinearLayout
        android:id="@+id/dialog"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    <LinearLayout
            android:paddingTop="23dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reject_dialog_back">
        <TextView
                android:id="@+id/title"
                android:textSize="16sp"
                android:textColor="#FF292f33"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提示"/>
        <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="120dp" >
            <TextView
                    android:id="@+id/message"
                    android:textSize="14sp"
                    android:minHeight="90dp"
                    android:gravity="center"
                    android:textColor="#FF3C3B3B"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingBottom="10dp"
                    android:text="哈哈哈哈哈哈"/>
        </ScrollView>

    </LinearLayout>
    <ImageView
            android:background="#FFB2B2B2"
            android:layout_width="fill_parent"
            android:layout_height="1px"/>
    <LinearLayout

            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/confirm"
                android:text="ceshi"
                android:background="@drawable/ios_7_dialog_button_bottom"
                android:layout_weight="1.0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#FF007AFF"
                android:padding="15dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
