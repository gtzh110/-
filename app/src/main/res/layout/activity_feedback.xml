<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/feedback_header"
        layout="@layout/activity_header" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="订单信息"
                    android:textColor="@color/transparent_half"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/top_line"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFD1D1D1" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!-- 设置颜色和字体大小以及边距-->
                <TextView
                    android:id="@+id/info_key1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:textColor="#8899a6"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/value_layout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/info_value1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:hint="未填写"
                        android:textColor="#8899a6"
                        android:textColorHint="#FFC8C7CD"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFD1D1D1" />

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!-- 设置颜色和字体大小以及边距-->
                <TextView
                    android:id="@+id/info_key2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:textColor="#8899a6"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/value_layout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/info_value2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:hint="未填写"
                        android:textColor="#8899a6"
                        android:textColorHint="#FFC8C7CD"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFD1D1D1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="工人信息"
                    android:textColor="@color/transparent_half"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!-- 设置颜色和字体大小以及边距-->
                <TextView
                    android:id="@+id/info_key3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:textColor="#8899a6"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/value_layout3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/info_value3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:hint="未填写"
                        android:textColor="#8899a6"
                        android:textColorHint="#FFC8C7CD"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/line3"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFD1D1D1" />

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!-- 设置颜色和字体大小以及边距-->
                <TextView
                    android:id="@+id/info_key4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:textColor="#8899a6"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/value_layout4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                    <TextView
                        android:id="@+id/info_value4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:hint="未填写"
                        android:textColor="#8899a6"
                        android:textColorHint="#FFC8C7CD"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/line4"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FFD1D1D1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/title_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="评价工人"
                    android:textColor="@color/transparent_half"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="top">

                    <RatingBar
                        android:id="@+id/rating_bar"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@color/white"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="1" />

                    <TextView
                        android:id="@+id/info_key5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:text="请为师傅的服务打分哦"
                        android:textSize="16sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:gravity="left"
                    android:hint="请点击输入您对师傅的印象吧"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#FF292f33"
                    android:textColorHint="#FFb2bdc5"
                    android:textSize="16sp" />

                <include
                    android:id="@+id/commit"
                    layout="@layout/layout_register_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>