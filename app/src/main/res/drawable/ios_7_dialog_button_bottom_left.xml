    <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp"/>
        <solid android:color="#DADCDCDC"/>
    <padding android:left="0dp" android:top="0dp" android:right="0dp"
             android:bottom="0dp"/>
